<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Pantry</title>
  </head>
  <body>
    <h1>Welcome to my Pantry</h1>
    <%- include('../partials/_navbar.ejs') %>
    <% if (pantry.length > 0) { %>
      <% pantry.forEach((food) => { %>
        <a href="/users/<%= user._id %>/foods/<%= foods._id %>">
          <li><%= foods.food %></li>
        </a>
      <% }) %>
   <% } else { %>
    <p>There are no items in this pantry</p>
   <% } %>
   <form action="users/<%= user._id %>/foods/<%= foods._id %>?_method=DELETE" method="POST">
    <button type="submit">Delete</button>
  </form>
  </body>
</html>
